@model IEnumerable<WebApplication4.Models.Entities.News>
@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <img src="~/ImageView/WatPhaSom.jpg" />
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">

@foreach (var item in Model)
{

    <div class="col-md-3">

        <img src="@Url.Content(item.NewsImages)" class="img-thumbnail" alt="IMAGES" width="150" height="150" />

    </div>
    <div class="col-md-9">
        <h2>@Html.DisplayFor(modelItem => item.NewsTitle)</h2>
        <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
        <p><a class="btn btn-default" href="/Product">Shop Now &raquo;</a></p>
    </div>
   
}
</div>